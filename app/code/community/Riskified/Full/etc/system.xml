<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <newtab translate="label" module="full">
            <label>Riskified</label>
            <sort_order>999</sort_order>
        </newtab>
    </tabs>
    <sections>
        <fullsection translate="label" module="full">
            <class>separator-top</class>
            <label>Settings</label>
            <tab>newtab</tab>
            <sort_order>130</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <full translate="label">
                    <label>API settings</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <key translate="label">
                            <label>Secret Key</label>
                            <frontend_type>Text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </key>
                         <domain translate="label">
                            <label>Shop Domain</label>
                            <frontend_type>Text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </domain>
                        <url translate="label">
                            <label>Riskified connection</label>
                            <frontend_type>select</frontend_type>
                            <source_model>full/source</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Edit Riskified connection url, use sandbox for testing.]]></comment>
                        </url>
                        <beaconurl translate="label">
                          <label>Beacon URL</label>
                          <frontend_type>text</frontend_type>
                          <sort_order>4</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>1</show_in_website>
                          <show_in_store>1</show_in_store>
                          <comment><![CDATA[Edit Riskified beacon url.]]></comment>
                        </beaconurl>
                        <activationstatus>
                            <comment></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <class>riskified_activationstatus</class>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </activationstatus>
                        <status_control_active>
                          <label>Status Change Enable</label>
                          <comment>Enable automatic status changes by Riskified</comment>
                          <frontend_type>select</frontend_type>
                          <sort_order>6</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>1</show_in_website>
                          <show_in_store>1</show_in_store>
                          <source_model>adminhtml/system_config_source_yesno</source_model>
                        </status_control_active>

                    </fields>
                </full>
                </groups>
            </fullsection>
    </sections>
</config>
